<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:dropDownSelector">@color/colorPrimaryDark</item>
    </style>
    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@color/teal</item>
    </style>
</resources>
